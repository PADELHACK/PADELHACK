<h1 class="mt-2 ms-5">Crea tu cuenta en PADELHACK</h1>

<form action="/register" method="POST" class="mt-3 ms-5">
  <div class="col-md-3">
    <label for="email" class="form-label">Email address</label>
    <input
      class="form-control{{#if errors.email}} is-invalid{{/if}}"
      name="email" type="email" id="email" placeholder="name@example.com" value="{{user.email}}" required
    >
    {{#if errors.email}}
      <div class="invalid-feedback">
        {{errors.email}}
      </div>
    {{/if}}
  </div>
  <div class="col-md-3 mt-3">
    <label for="username" class="form-label">Username</label>
    <input
      class="form-control{{#if errors.username}} is-invalid{{/if}}"
      name="username" type="text" id="username" value="{{user.username}}" required
    >
    {{#if errors.username}}
      <div class="invalid-feedback">
        {{errors.username}}
      </div>
    {{/if}}
  </div>
  <div class="col-md-3 mt-3">
    <label for="password" class="form-label">Password</label>
    <input
      class="form-control{{#if errors.password}} is-invalid{{/if}}" 
      name="password" type="password" id="password" required
    >
    {{#if errors.password}}
      <div class="invalid-feedback">
        {{errors.password}}
      </div>
    {{/if}}
  </div>
  <div class="col-md-3 mt-3">
    <label for="repeatPassword" class="form-label">Repeat password</label>
    <input
      class="form-control{{#if errors.password}} is-invalid{{/if}}" 
      name="repeatPassword" type="password" id="repeatPassword" required
    >
    {{#if errors.repeatPassword}}
      <div class="invalid-feedback">
        {{errors.repeatPassword}}
      </div>
    {{/if}}
  </div>

  {{!-- <div class="mb-3">
    <label for="avatar" class="form-label">Avatar</label>
    <input class="form-control" type="file" id="avatar" name="avatar">
  </div> --}}

  <button class="btn btn-primary mt-3" type="submit">Create account</button>
</form>