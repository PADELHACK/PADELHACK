<link rel="stylesheet" href="/styles/list.css">

{{> outletBar}}


<div class="d-flex justify-content-center mt-3">
  <div class="d-flex mb-3 align-items-center">
  <div class="btn-group me-3">
    <button type="button" class="btn {{#activeFilter query=query param='category'}}btn-success{{else}}btn-primary{{/activeFilter}}">Categoria</button>
    <button type="button" class="btn {{#activeFilter query=query param='category'}}btn-success{{else}}btn-primary{{/activeFilter}} dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
      <span class="visually-hidden">Toggle Dropdown</span>
    </button>
    <ul class="dropdown-menu">
      <form action="/products/list" method="get">
        {{#each category}}
          <li><button class="dropdown-item {{#activeItemFilter query=../query param='category' value=this}}active{{/activeItemFilter}}" name="category" value="{{this}}">{{this}}</button></li>
        {{/each}}
      </form>
    </ul>
  </div>
</div>

<div class="d-flex mb-3 align-items-center">
  <div class="btn-group me-3">
    <button type="button" class="btn {{#activeFilter query=query param='brand'}}btn-success{{else}}btn-primary{{/activeFilter}}">Marca</button>
