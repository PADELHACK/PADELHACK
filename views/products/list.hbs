<h1>Productos</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-5 g-4">
  {{#each products}}
    <div class="col">
      <div class="card">
        <a href="/products/detail/{{_id}}">
          <img src="{{image}}" class="card-img-top" alt="imagen de detalle">
        </a>
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">{{price}} â‚¬</h6>
          <h6 class="card-subtitle mb-2 text-body-secondary">{{brand}}</h6>
          <p class="card-text">{{shortDescription}}</p>
          <a href="/products/detail/{{_id}}" class="btn btn-primary">See more details</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>
