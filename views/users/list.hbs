<div class="mt-5">

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Rol</th>
      <th scope="col">Email</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td>{{this.username}}</td>
      <td>{{this.role}}</td>
      <td>{{this.email}}</td>
      <td>
        <a href="/users/{{this._id}}/edit" class="btn btn-warning">Editar</a>
        <a href="/users/{{this._id}}/delete" class="btn btn-danger">Eliminar</a>
      </td>
    </tr>
    {{/each}}
  </tbody>

</div>